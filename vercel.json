{
  "version": 2,
  "builds": [
    {
      "src": "web/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/",
      "dest": "/web/index.html"
    },
    {
      "src": "/styles.css",
      "dest": "/web/styles.css"
    },
    {
      "src": "/app.js",
      "dest": "/web/app.js"
    },
    {
      "src": "/output/(.*)",
      "dest": "/output/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
